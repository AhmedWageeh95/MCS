<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:background="@drawable/logo1"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d134c3fa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_input_bg"
                android:drawableLeft="@drawable/ic_username"
                android:gravity="center"
                android:hint=" Name"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_input_bg"
                android:drawableLeft="@drawable/ic_email"
                android:gravity="center"
                android:hint="Email"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#000"

                />

            <EditText
                android:id="@+id/phoneEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_input_bg"
                android:drawableLeft="@drawable/ic_phone"
                android:gravity="center"
                android:hint=" Phone"
                android:inputType="phone"
                android:textColor="#000"
                android:textColorHint="#000"

                />

            <EditText
                android:id="@+id/passEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_input_bg"
                android:drawableLeft="@drawable/ic_pass"
                android:gravity="center"
                android:hint=" Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/person_idEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_input_bg"
                android:drawableLeft="@drawable/ic_id"
                android:gravity="center"
                android:hint=" Person ID"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#000"

                />

            <EditText
                android:id="@+id/addressEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_input_bg"
                android:drawableLeft="@drawable/ic_address"
                android:gravity="center"
                android:hint=" Address"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#000"

                />

            <EditText
                android:id="@+id/ageEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/login_input_bg"
                android:drawableLeft="@drawable/ic_age"
                android:gravity="center"
                android:hint=" Age"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#000"

                />

            <Button
                android:id="@+id/uplode_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_input_bg"
                android:text="Choose Photo"
                android:textSize="18dp" />

            <Button

                android:id="@+id/signUp_activity_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:onClick="openLogin"
                android:text="Sign Up"
                android:textColor="#494747"
                android:textSize="18dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>