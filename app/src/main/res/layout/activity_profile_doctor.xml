<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55c8eaf9"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ahmed"
            android:id="@+id/photo1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patien_profile_name"
            android:text="Ahmed Wageeh"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <Button
                android:layout_width="0dp"
                android:drawableLeft="@drawable/camera"
                android:layout_height="wrap_content"
                android:id="@+id/patien_update_photo_btn"
                android:textColor="#000"
                android:onClick="updatePhoto"
                android:text="Update Photo"
                android:background="@drawable/login_input_bg"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="0dp"
                android:drawableLeft="@drawable/editprofile"
                android:layout_height="wrap_content"
                android:id="@+id/patien_edite_profile_btn"
                android:textColor="#000"
                android:text="Edite Profile"
                android:onClick="editprofile"
                android:background="@drawable/login_input_bg"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/patien_profile_Fuculty"
            android:text="faculty of Medicine monofia unverstie"

            android:textSize="14dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:drawableLeft="@drawable/gradute"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patien_profile_hospital"
            android:drawableLeft="@drawable/day1"
            android:text="23/12/1995 "
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/patien_profile_phone"
            android:drawableLeft="@drawable/ph1"
            android:text="01223539947 "
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#55c8eaf9"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Add Device"
            android:onClick="addDivece"
            android:background="@drawable/login_input_bg"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Add Rebort"
            android:onClick="Addreport"
            android:background="@drawable/login_input_bg"
            android:layout_weight="1"
            android:layout_margin="5dp"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#55cbedfc"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ahmed"
            android:id="@+id/photo"

            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="11dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Ahmed Wageeh"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/photo"
            android:layout_toEndOf="@+id/photo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="1dp"
            android:textStyle="bold"
            android:textSize="10dp"

            android:text="20/6/2018" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:padding="10sp"
            android:text="Are zits making your life hell? Take confort in the fact that many people shares your angony -and that there are alots ways of treating your acne . "
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>




</LinearLayout>


